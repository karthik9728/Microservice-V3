@model List<ApplicationUserDto>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 text-primary">
            <h2>Customers List</h2>
        </div>
        <div class="col-md-6 text-end">
           <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
    <br />
    @if(Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-sm table-bordered table-striped w-100">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Address</th>
                        <th>User Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <a asp-controller="Auth" asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit"><i class="bi bi-pencil-square"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center text-uppercase text-warning">
            No Records to Show
        </div>
    }
</div>