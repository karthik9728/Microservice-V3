@model AdminRegisterVM

<div class="container mt-4 mb-4 border rounded border-2 p-4" style="background-color:rgba(0,0,0,0.1)">
    <div class="row">
        <div class="col-md-2">
        </div>
        <div class="col-md-8">
            <h3 class="text-primary text-center text-uppercase">Register User based on Role</h3>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="@Model.RegisterationRequestDto.FirstName" class="form-label"></label>
                    <input asp-for="@Model.RegisterationRequestDto.FirstName" class="form-control rounded" />
                    <span asp-validation-for="@Model.RegisterationRequestDto.FirstName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.RegisterationRequestDto.LastName" class="form-label"></label>
                    <input asp-for="@Model.RegisterationRequestDto.LastName" class="form-control rounded" />
                    <span asp-validation-for="@Model.RegisterationRequestDto.LastName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.RegisterationRequestDto.Email" class="form-label"></label>
                    <input asp-for="@Model.RegisterationRequestDto.Email" class="form-control rounded" />
                    <span asp-validation-for="@Model.RegisterationRequestDto.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.RegisterationRequestDto.Password" class="form-label"></label>
                    <input asp-for="@Model.RegisterationRequestDto.Password" class="form-control rounded" />
                    <span asp-validation-for="@Model.RegisterationRequestDto.Password" class="text-danger"></span>
                </div>
                <div>
                    <label  class="form-label">Role</label>
                    <select class="form-select" asp-for="@Model.RegisterationRequestDto.Role" asp-items="@Model.RolesList">
                        <option selected disabled>--Select Role</option>
                    </select>
                </div>
                <br />
                <div class="text-center">
                    <button class="btn btn-success" type="submit">Register</button>
                    <a class="btn btn-primary" asp-controller="Auth" asp-action="Login">Login</a>
                </div>
            </form>
        </div>
        <div class="col-md-2">
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}